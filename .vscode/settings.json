{
    "editor.tokenColorCustomizations":
     {
        "[*]": {
            "textMateRules": [  
                {
                    "scope": "constant.numeric.hex",
                    "settings": {
                        "foreground": "#df9542ef" 
                    }
                },
                {
                    "scope": "constant.numeric.binary",
                    "settings": {
                        "foreground": "#e6d64cef" 
                    }
                },
                {
                    "scope": "constant.numeric.decimal",
                    "settings": {
                        "foreground": "#d84155ef" 
                    }
                },              
                {
                    "scope": "keyword",
                    "settings": {
                        "foreground": "#b9c7bf" 
                    }
                },
        
                {
                    "scope": "keyword.ca65",  //CA65 specific keywords
                    "settings": {
                        "foreground": "#0eb9b9" 
                    }
                },
               
                {
                    "scope": "keyword.control",  //if, else, etc.
                    "settings": {
                        "foreground": "#0993ca" 
                    }
                },
    
                {
                    "scope": "support.type",  //Most of the ASM commands (lda, sta, etc.)
                    "settings": {
                        "foreground": "#3ee771" 
                    }
                },
        
                {
                    "scope": "storage", //import, include, etc.
                    "settings": {
                        "foreground": "#e6d226" 
                    }
                },
                {
                    "scope": "variable.ca65.constants",
                    "settings": {
                        "foreground": "#cb71eed3" 
                    }
                },
                {
                    "scope": "variable.ca65.uppercase",
                    "settings": {
                        "foreground": "#cb71eed3"  
                    }
                },
                {
                    "scope": "variable.ca65",
                    "settings": {
                        "foreground": "#71a5eed3" 
                    }
                },
               
                {
                    "scope": "entity.other.attribute-name",   //label names
                    "settings": {
                        "foreground": "#ac8456"
                    }
                },
                {
                    "scope": "variable.macro",
                    "settings": {
                        "foreground": "#d4fc46d3" 
                    }
                },
                {
                    "scope": "comment",
                    "settings": {
                    "foreground": "#37b32ca9" // Bright green for comments in dark themes
                    }
                },

            ]
        }
    },
    "[ca65]": {
        "editor.rulers": [60],  // Shows a vertical line at column 60 for comment alignment
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.renderWhitespace": "boundary",
        "editor.guides.indentation": true,
        "editor.guides.bracketPairs": true,
        "editor.folding": true,
        "editor.foldingStrategy": "indentation"
    },
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true,
    "editor.semanticHighlighting.enabled": true
}